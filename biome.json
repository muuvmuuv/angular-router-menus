{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"projects/*/src/**/*.ts",
			"projects/*/src/**/*.js",
			"upgrade.fish",
			"*.json",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/.angular/**",
			"!**/package-lock.json",
			"!**/pnpm-lock.yaml",
			"!projects/*/angular.json",
			"!projects/*/tsconfig*.json",
			"!projects/*/*.json"
		],
		"ignoreUnknown": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":URL:",
							":NODE:",
							":PACKAGE:",
							":PACKAGE_WITH_PROTOCOL:",
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"domains": {
			"project": "none"
		},
		"rules": {
			"recommended": true,
			"a11y": "error",
			"nursery": {
				"recommended": true
			},
			"performance": "error",
			"security": "error",
			"style": "error",
			"correctness": "error",
			"complexity": "error",
			"suspicious": "error"
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
