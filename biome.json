{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"*.json",
			"*.jsonc",
			"*.mjs",
			"*.ts",
			"*.tsx",
			"*.js",
			"*.jsx",
			"*.css",
			"projects/**/*.json",
			"projects/**/*.jsonc",
			"projects/**/*.mjs",
			"projects/**/*.ts",
			"projects/**/*.tsx",
			"projects/**/*.js",
			"projects/**/*.jsx",
			"projects/**/*.css",
			"projects/**/*.graphql",
			"!**/node_modules",
			"!**/dist",
			"!**/.angular"
		]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":URL:",
							":NODE:",
							":PACKAGE:",
							":PACKAGE_WITH_PROTOCOL:",
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"domains": {
			"project": "none"
		},
		"rules": {
			"recommended": true,
			"a11y": "error",
			"nursery": {
				"recommended": true
			},
			"performance": "error",
			"security": "error",
			"style": "error",
			"correctness": "error",
			"complexity": "error",
			"suspicious": "error"
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
